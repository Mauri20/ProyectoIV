<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#5EABE0" />

                    <stroke android:width="3dp" android:color="#09568B" />

                    <padding android:bottom="1dp" android:left="5dp" android:right="10dp" android:top="1dp" />

                    <corners android:radius="50dp" />
                </shape>
            </item>
            <item>

                <bitmap android:gravity="center|right"
                    android:src="@drawable/downchevron">
                </bitmap>

            </item>
        </layer-list>
    </item>
</selector>